                                                  myh1.innerHTML = '<iframe class="sample" id="foo" name="foo" src="/sample_chartA11" width="100%" height="600" scrolling="no"></iframe><style>#foo {border: none;}</style>';
                                              }
                                              function calB() {
                                                  // フレームのDOM要素を取得
                                                  var btn = $('#btn-a').val();
