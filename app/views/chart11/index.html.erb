                </tr>
                <tr>
                  <td data-part="controls" data-arrangement="text-align-center">
                    <div data-component="inline-toolbar">
                      <ul data-part="items">
                        <li>
                          <input type="checkbox" data-styled data-variant="switch">
                        </li>
                      </ul>
                    </div>
                  </td>
